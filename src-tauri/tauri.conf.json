{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "RosePad",
  "identifier": "com.roseworld.rosepad",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "bundle": {
    "category": "Utility",
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "shortDescription": "Simple and Beautiful Text Editor",
    "fileAssociations": [
        {
        "ext": [".rpad"],
        "name": "Rpad",
        "rank": "Owner",
        "role": "Editor"
      },
      {
        "ext": [".txt"],
        "rank": "Alternate",
        "role": "Editor"
      }
    ],
    "publisher": "TMG8047KG",
