{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "RosePad",
  "identifier": "com.roseworld.rosepad",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "RosePad",
        "width": 1000,
        "height": 600,
        "minHeight": 300,
        "minWidth": 500,
        "center": true,
        "decorations": false,
        "theme": "Dark",
        "focus": true,
        "backgroundColor": "#414141"
      }
    ]
  },
  "bundle": {
    "category": "Productivity",
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "shortDescription": "Simple and Beautiful Text Editor",
    "fileAssociations": [
      {
        "ext": [".rpad"],
        "description": "RosePad Project File",
        "name": "Rpad"
      },
      {
        "ext": [".txt"]
      }
    ],
    "publisher": "TMG8047KG",
    "license": "GNU GPL-3",
    "licenseFile": "../LICENSE",
    "windows": {
      "allowDowngrades": false,
      "wix": {
        "bannerPath": "../public/images/Banner.bmp",
        "dialogImagePath": "../public/images/dialog.bmp"
      },
      "nsis": {
        "installerIcon": "icons/icon.ico",
        "installMode": "both"
      },
      "webviewInstallMode": {
        "silent": true,
        "type": "offlineInstaller"
      }
    },
    "createUpdaterArtifacts": true
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEZEQUM2RDlCNENFMjJFODcKUldTSEx1Sk1tMjJzL1c3K2VIK2JZdThYZ3c0OXhFRjBnU1BJZnFHY3luMXNvcHgzNGZMU2NlUUUK",
      "endpoints": [
        "https://github.com/TMG8047KG/RosePad/releases/latest/download/latest.json"
      ],
      "windows":{
        "installMode": "passive"
      }
    }
  }
}
