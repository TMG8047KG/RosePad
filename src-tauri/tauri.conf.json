{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "RosePad",
  "version": "0.1.0",
  "identifier": "com.roseworld.rosepad",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "RosePad",
        "width": 1000,
        "height": 600,
        "minHeight": 300,
        "minWidth": 500,
        "center": true,
        "decorations": false,
        "focus": true,
        "backgroundColor": "#414141"
      }
    ],
    "security": {
      "csp": null,
      "capabilities": [
        {
          "identifier": "draggable-window",
          "windows": [
            "*"
          ],
          "permissions": [
            "core:window:allow-start-dragging",
            "core:window:allow-close",
            "core:window:allow-maximize",
            "core:window:allow-unmaximize",
            "core:window:allow-minimize",
            "core:window:allow-is-maximized",
            "core:resources:allow-close",
            "fs:default",
            "fs:allow-appconfig-write",
            "fs:allow-appconfig-read",
            "dialog:default",
            "dialog:allow-open",
            "core:event:default",
            "core:event:allow-listen",
            "core:path:default",
            "core:path:allow-resolve-directory",
            "core:menu:default",
            "core:menu:allow-new",
            "core:app:default",
            "core:app:allow-version",
            "core:window:allow-get-all-windows",
            {
              "identifier": "fs:read-all",
              "allow": [{ "path": "**" }]
            },
            {
              "identifier": "fs:write-all",
              "allow": [{ "path": "**" }]
            }
          ]
        }
      ]
    }
  },
  "bundle": {
    "category": "Productivity",
    "active": true,
    "targets": "all",
    "icon": [
      "icons/icon.ico",
      "icons/Square310x310Logo.png"
    ],
    "shortDescription": "Simple and Beautiful Text Editor",
    "fileAssociations": [
      {
        "ext": [".rpad"],
        "description": "RosePad Project File",
        "name": "Rpad"
      },
      {
        "ext": [".txt"]
      }
    ],
    "publisher": "TMG8047KG",
    "license": "GPL",
    "licenseFile": "../LICENSE",
    "windows": {
      "allowDowngrades": false,
      "wix": {
        "bannerPath": "../public/images/Banner.bmp",
        "dialogImagePath": "../public/images/dialog.bmp"
      },
      "nsis": {
        "installerIcon": "icons/icon.ico",
        "installMode": "both"
      }
    },
    "createUpdaterArtifacts": true
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDkyOEEzOTZGMzdDMjk2RTAKUldUZ2xzSTNiem1La2hCOVJkOThvamlEZHBYeW8zYUpFUUxoNmxTTER4SmFGcC9tUC8xS0E5OVoK",
      "endpoints": [
        "https://github.com/TMG8047KG/RosePad/releases/latest/download/latest.json"
      ],
      "windows":{
        "installMode": "passive"
      }
    }
  }
}
