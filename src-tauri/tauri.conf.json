{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "RosePad",
  "identifier": "com.roseworld.rosepad",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "bundle": {
    "category": "Utility",
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "shortDescription": "Simple and Beautiful Text Editor",
    "fileAssociations": [
      {
        "name": "RosePad Project",
        "description": "RosePad project file",
        "ext": ["rpad"],
        "mimeType": "application/x-rosepad",
        "role": "Editor",
        "rank": "Owner"
      },
      {
        "name": "Text Document",
        "description": "Plain text",
        "ext": ["txt"],
        "role": "Editor"
      },
      {
        "name": "PDF Document",
        "description": "Portable Document Format",
        "ext": ["pdf"],
        "role": "Viewer"
      },
      {
        "name": "Word Document",
        "description": "Microsoft Word",
        "ext": ["doc","docx"],
        "role": "Viewer"
      }
    ],
    "publisher": "TMG8047KG",
    "copyright": "Â© 2025 Alexandar Goranov(TMG8047KG)",
    "license": "GNU GPL-3",
    "licenseFile": "../LICENSE"
  },
  "plugins": {
    "sql":{
      "preload": ["sqlite:rosepad.db"]
    }
  }
}
